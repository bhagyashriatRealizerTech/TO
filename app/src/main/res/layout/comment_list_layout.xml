<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#00ffffff"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="5"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:layout_weight="0.8"
            android:id="@+id/txtinitial"
            android:background="@drawable/profilepic_circle"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/heading"
            android:textSize="20sp"
            android:visibility="visible"
            android:text="SD"/>

        <com.techynotion.newsplanet.RoundedImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.7"
            android:visibility="gone"
            android:scaleType="center"
            android:id="@+id/img_user_image" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.2"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fancy Dress Competetion"
                    android:id="@+id/name"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/heading"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="31/08/2016"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/detail"
                    android:layout_gravity="right"
                    android:textSize="16sp"
                    android:id="@+id/txtdate"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher"
                android:textSize="16sp"
                android:singleLine="true"
                android:id="@+id/comment"
                android:gravity="left"
                android:layout_marginTop="3dp"
                android:layout_gravity="left"
                android:textColor="@color/heading"
                />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>